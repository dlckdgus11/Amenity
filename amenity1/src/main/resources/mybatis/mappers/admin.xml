	</select>
	
	<!-- 업체 정보 수정 -->
	<update id="updateC_Info" parameterType="CompanyVO">
		<![CDATA[
		update
		company set company=#{company}, category=#{category}, detail=#{detail}, location=#{location}, grade=#{grade}, latitude=#{latitude}, longitude=#{longitude} 
		where c_no=#{c_no} 
