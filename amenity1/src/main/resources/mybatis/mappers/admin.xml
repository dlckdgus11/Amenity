<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amenity.admin.dao.AdminDAO">

<resultMap id="articlesResult" type="noticeVO">
	<result property="level" column="level"/>
	<result property="articleNO" column="articleNO"/>
	<result property="title" column="title"/>
	<result property="content" column="content"/>
	<result property="writedate" column="writedate"/>
</resultMap>

	<select id="selectAllArticlesList" resultType="NoticeVO" parameterType="map">
	<![CDATA[
		select * from notice order by writedate desc LIMIT #{start}, #{limit}
	]]>
	</select>

	<!-- 상품 총 개수 조회 -->
	<select id="select_TotalNoticeCount" resultType="int">
    	SELECT COUNT(*) FROM notice
	</select>


	<select id="a_signIn"  resultType="adminVO"   parameterType="adminVO" >
		<![CDATA[
		select * from adm
		where a_id=#{a_id} and a_pw=#{a_pw}		
		]]>
  	</select>
  	
  	<select id="selectNewArticleNO" resultType="int">
		<![CDATA[
			select ifnull(max(articleNO), 0) from notice
		]]>
	</select>
	
	<insert id="insertNewArticle" parameterType="java.util.Map">
		<![CDATA[
			insert into notice(articleNO, title, content, writedate, u_id) 
			values(#{articleNO}, #{title}, #{content}, now(), #{u_id})
		]]>
	</insert>
	
	<!-- 공지 정보 삭제 -->
	<delete id="deleteNotice" parameterType="String">
		<![CDATA[
		delete from notice where articleNO=#{articleNO}
		]]>
	</delete>
	
	<select id="viewNotice" resultType="NoticeVO" parameterType="int">
		<![CDATA[
		select * from notice where articleNO = #{articleNO}
		]]>
	</select>
	
	<insert id="addNoticeImage" parameterType="java.util.Map">
    <![CDATA[
        insert into noticeimage(articleNO, imageFileName) 
        values(#{articleNO}, #{imageFileName})
    ]]>
	</insert>

	<select id="selectNoticeByArticleNO" resultMap="articlesResult">
    	SELECT * FROM notice WHERE articleNO = #{articleNO}
	</select>

	<select id="selectImageFileNamesByArticleNO" resultType="String">
    	SELECT imageFileName FROM noticeimage WHERE articleNO = #{articleNO}
	</select>
	
	<select id="selectUserList" resultType="UserVO" parameterType="map">
    	SELECT * FROM user LIMIT #{start}, #{limit}
	</select>

    <select id="selectTotalUserCount" resultType="int">
        SELECT COUNT(*) FROM user
    </select>
    
    
    <select id="searchUsers" resultType="UserVO">
    	SELECT * 
    	FROM user 
    	<choose>
    		<when test="category == 'all'"></when>
    	    <when test="category == 'id'">WHERE u_id LIKE CONCAT('%', #{value}, '%')</when>
    	    <when test="category == 'name'">WHERE name LIKE CONCAT('%', #{value}, '%') </when>
    	    <when test="category == 'nickname'">WHERE nickname LIKE CONCAT('%', #{value}, '%') </when>
    	    <when test="category == 'email'">WHERE email LIKE CONCAT('%', #{value}, '%') </when>
    	    <otherwise> 1=1 </otherwise>
    	</choose>
    	LIMIT #{start}, #{limit}
	</select>

	<select id="getSearchedUserCount" resultType="int">
	    SELECT COUNT(*) 
	    FROM user
	    <choose>
	    	<when test="category == 'all'"></when>
	        <when test="category == 'id'">WHERE u_id LIKE CONCAT('%', #{value}, '%')</when>
	        <when test="category == 'name'"> WHERE name LIKE CONCAT('%', #{value}, '%') </when>
	        <when test="category == 'nickname'"> WHERE nickname LIKE CONCAT('%', #{value}, '%') </when>
   	     	<when test="category == 'email'"> WHERE email LIKE CONCAT('%', #{value}, '%') </when>
   	     	<otherwise> 1=1 </otherwise>
    	</choose>
	</select>

	<!-- info from u_id  -->
	<select id="findUserInfo" resultType="UserVO" parameterType="java.lang.String">
		<![CDATA[
		select * from user where u_id = #{u_id}
		]]>
	</select>
	
	<!-- 상품 정보 수정 -->
	<update id="updateU_Info" parameterType="UserVO">
		<![CDATA[
		update
		user set u_pw=#{u_pw}, tel1=#{tel1}, tel2=#{tel3}, tel3=#{tel3}, name=#{name}, nickname=#{nickname},
		birth=#{birth}, email=#{email}, mileage=#{mileage}
		where u_id=#{u_id} 
		]]>
	</update>
	
	<!-- 상품 정보 삭제 -->
	<delete id="u_deleteInfo" parameterType="String">
		<![CDATA[
		delete from user where u_id=#{u_id}
		]]>
	</delete>
	
	<select id="selectBusinessList" resultType="BusinessVO" parameterType="map">
    	SELECT * FROM business LIMIT #{start}, #{limit}
	</select>

	<select id="selectTotalBusinessCount" resultType="int">
    	SELECT COUNT(*) FROM business
	</select>
	
	 <select id="searchBusinesses" resultType="BusinessVO">
        SELECT * 
        FROM business 
        <choose>
            <when test="category == 'all'"></when>
