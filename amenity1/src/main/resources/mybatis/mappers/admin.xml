		delete from business where b_no=#{b_no}
		]]>
	</delete>
	
	<!-- 업체 목록 조회 -->
	<select id="select_CompanyList" resultType="CompanyVO" parameterType="map">
    	SELECT * FROM company LIMIT #{start}, #{limit}
	</select>
	
	<!-- 업체 총 개수 조회 -->
	<select id="select_TotalCompanyCount" resultType="int">
